{% block body %}
<div class="purchase-container">
    <div class="success-card">
        <div class="checkmark-circle">
            <i class="fas fa-check-circle"></i>
        </div>
        
        <h1 class="success-title">Merci pour votre achat !</h1>
        
        <div class="order-summary">
