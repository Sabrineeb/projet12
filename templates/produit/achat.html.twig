                    </tr>
                </thead>
                <tbody>
                    {% for produit in produits %}
                        <tr>
                            <td>{{ produit.nom }}</td>
                            <td>{{ produit.quantite }}</td>
                            <td>{{ produit.prix|number_format(3, ',', ' ') }} TND</td>
                            <td>{{ (produit.prix * produit.quantite)|number_format(3, ',', ' ') }} TND</td>
                            <td>
                                <a href="{{ path('produit_supprimer', {id: produit.id}) }}" class="btn btn-delete">
